Config { 

   -- appearance
     font =         "xft:Iosevka:size=15:antialias=true"
   , bgColor =      "#1E032C"
   , fgColor =      "#FFFFFF"
   , position =     Static { xpos = 1380 , ypos = 15, width = 1896, height = 25 }
   --border =       BottomB
   --borderColor =  "#e5e9f0"

   -- layout
   , sepChar =  "%"   -- delineator between plugin names and straight text
   , alignSep = "}{"  -- separator between left-right alignment

   -- general behavior
   , lowerOnStart =     True    -- send to bottom of window stack on start
   , hideOnStart =      False   -- start with window unmapped (hidden)
   , allDesktops =      False    -- show on all desktops
   , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
   , pickBroadest =     False   -- choose widest display (multi-monitor)
   , persistent =       True    -- enable/disable hiding (True = disabled)

   -- plugins
   --   Numbers can be automatically colored according to their value. xmobar
   --   decides color based on a three-tier/two-cutoff system, controlled by
   --   command options:
   --     --Low sets the low cutoff
   --     --High sets the high cutoff
   --
   --     --low sets the color below --Low cutoff
   --     --normal sets the color between --Low and --High cutoffs
   --     --High sets the color above --High cutoff
   --
   --   The --template option controls how the plugin is displayed. Text
   --   color can be set by enclosing in <fc></fc> tags. For more details
   --   see http://projects.haskell.org/xmobar/#system-monitor-plugins.
   , commands = 
       
        -- weather monitor
        [ Run Weather "RJTT" [ "--template", "[<icon=/home/svendeer/.config/xmobar/icons/temp.xbm/>: <fc=#81A1C1><tempC></fc>¬∞]"
                             ] 36000

        , Run WeatherX "LEBL"
                             [ ("clear", "üå£")
                             , ("sunny", "üå£")
                             , ("mostly clear", "üå§")
                             , ("mostly sunny", "üå§")
                             , ("partly sunny", "‚õÖ")
                             , ("fair", "üåë")
                             , ("cloudy","‚òÅ")
                             , ("overcast","‚òÅ")
                             , ("partly cloudy", "‚õÖ")
                             , ("mostly cloudy", "üåß")
                             , ("considerable cloudiness", "‚õà")]
                             ["-t", "<fn=2><skyConditionS></fn> \xfa03 <tempC>¬∞ \xe373 <rh>% \xe317 <windKmh>"
                             , "-L","10", "-H", "25", "--normal", "black"
                             , "--high", "lightgoldenrod4", "--low", "darkseagreen4"]
                             18000

        -- network activity monitor (dynamic interface resolution)
        , Run DynNetwork     [ "--template" , "\xf1eb <rx>kB/s" --Solo el de bajada.
                             , "--Low"      , "1000"       -- units: B/s
                             , "--High"     , "5000"       -- units: B/s
                             , "--low"      , "#CEDEF5,#4A014B"
                             , "--normal"   , "#CEDEF5,#4A014B"
                             , "--high"     , "#CEDEF5,#4A014B"
                             ] 10

        -- cpu activity monitor
--        --, Run MultiCpu       [ "--template" , "[\xf2db <total0>%|<total1>%]"
--        --                     , "--Low"      , "50"         -- units: %
--        --                     , "--High"     , "85"         -- units: %
--        --                     , "--low"      , "#A3BE8C"
--        --                     , "--normal"   , "#EBCB8B"
--        --                     , "--high"     , "#BF616A"
--        --                     ] 10
                          
        -- memory usage monitor
        , Run Memory         [ "--template" ,"\xf538 <usedratio>%"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "90"        -- units: %
                             , "--low"      , "#CEDEF5,#811433"
                             , "--normal"   , "#CEDEF5,#811433"
                             , "--high"     , "#CEDEF5,#811433"
                             ] 10

        , Run Locks

        , Run Brightness    [
                            "--template", "\xf185: <percent>%", "--", 
                            "--device", "intel_backlight"] 1

        , Run Volume "default" "Master"
                        [ "-t", "<status>", "--"
                        , "--on", "<fc=#CEDEF5,#811433><fn=1>\xf028</fn> <volume>%</fc>"
                        , "--onc", "#A3BE8C"
                        , "--off", "<fc=#CEDEF5,#811433><fn=1>\xf026</fn> MUTE</fc>"
                        , "--offc", "#BF616A"
                        ] 1

        -- time and date indicator 
        ,Run Date "\xf073 %a/%d/%b/%Y <fc=#FFFFFF,#4A014B> \xf017 %H:%M:%S </fc>" "date" 10
        ,Run Com "sh" ["-c", "/home/svendeer/cmus-song.sh &"] "songPlaying" 1
        ,Run UnsafeStdinReader
        ]

        , template = "%UnsafeStdinReader%<fc=#ffffff,#450445> Playing: %songPlaying% </fc>}%LEBL%{<fc=#CEDEF5,#811433> %default:Master% </fc><fc=#CEDEF5,#4A014B> %bright% </fc><fc=#FFFFFF,#811433> %memory% </fc><fc=#FFFFFF,#4A014B> %dynnetwork% </fc><fc=#FFFFFF,#811433> %date%</fc>"

   }
